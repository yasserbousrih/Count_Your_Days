<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.counturdays.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.counturdays.ui.Tasks.TaskFragment"
        android:label="@string/title_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_task"/>


    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.example.counturdays.ui.Notes.NotesFragment"
        android:label="@string/title_notes"
        tools:layout="@layout/notes_fragment" />
</navigation>